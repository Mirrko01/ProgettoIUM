<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrazioneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#143F6B"
            >

            <TextView
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text="Nome"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/nome"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:hint="Inserisci il tuo nome"
                android:textColorHint="@color/white"/>


            <TextView
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text="Cognome"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/cognome"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:hint="Inserisci il tuo cognome"
                android:textColorHint="@color/white" />


            <TextView
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text="Username"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:hint="Inserisci il tuo username"
                android:textColorHint="@color/white" />


            <TextView
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text="Password"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Inserisci la tua password"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/registrazioneButton"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Registrati"
                android:textColorHint="@color/white"/>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>