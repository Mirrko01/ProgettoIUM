<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".Monumenti">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF6750A3"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF6750A3"
            >

            <ImageView
                android:id="@+id/undo"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="5dp"
                android:text="MONUMENTI"
                android:textSize="30dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/bastione"
            android:layout_marginLeft="5dp"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shadow">

            <!-- TextView per il nome della chiesa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASTIONE DI SAINT REMY"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <!-- Spazio tra TextView e ImageView -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>

            <!-- ImageView per la foto della chiesa -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/bastione"/>

        </LinearLayout>

        <Space
            android:layout_width="408dp"
            android:layout_height="20dp"/>


        <LinearLayout
            android:id="@+id/elefante"
            android:layout_marginLeft="5dp"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shadow">

            <!-- TextView per il nome della chiesa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TORRE DELL'ELEFANTE"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/elefante"/>

        </LinearLayout>

        <Space
            android:layout_width="408dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:id="@+id/castello"
            android:layout_marginLeft="5dp"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shadow">

            <!-- TextView per il nome della chiesa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CASTELLO DI SAN MICHELE"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/castello"/>

        </LinearLayout>

        <Space
            android:layout_width="408dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:id="@+id/cristina"
            android:layout_marginLeft="5dp"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shadow">

            <!-- TextView per il nome della chiesa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PORTA CRISTINA              "
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="start"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cristina"/>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>