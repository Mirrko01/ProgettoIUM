<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tour5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF6750A3"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/undo"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/back"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="5dp"
            android:text="  TOUR"
            android:textSize="30dp"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout

            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tour5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giro intermedio a Castello"
                        android:textSize="18sp"/>

                    <!-- Add other content for the card as needed -->

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tour5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giro intermedio delle Chiese di Castello"
                        android:textSize="18sp"/>

                    <!-- Add other content for the card as needed -->

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add more cards as needed -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
